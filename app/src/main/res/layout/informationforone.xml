<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/popup_element5"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#EBF4FA"
android:orientation="vertical"
android:padding="10sp" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/roomNo"
        android:layout_width="34dp"
        android:layout_height="match_parent"
        android:text="Room 101"
        android:textColor="#ff00"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/btn_close_popup5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="right" />

</LinearLayout>


<View
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:layout_marginTop="5px"
    android:background="#c0c0c0"/>

<LinearLayout
    android:id="@+id/he"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10px">

    <TextView
        android:id="@+id/titleFirstPersonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="Name: "/>
    <TextView
        android:id="@+id/firstPersonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:textColor="#000"
        android:text="Mahim"

        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titleFirstPersonDepartment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="Department: "/>
    <TextView
        android:id="@+id/firstPersonDepartment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_weight="1.0"
        android:text="CSE" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titleFirstPersonSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="Session: "/>
    <TextView
        android:id="@+id/firstPersonSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_weight="1.0"
        android:text="120146"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titleFirstPersonBloodGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="Blood: "/>
    <TextView
        android:id="@+id/firstPersonBloodGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_weight="1.0"
        android:text="B+"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titleFirstPersonContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="Phone: "/>
    <TextView
        android:id="@+id/firstPersonContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:textColor="#33B5E5"
        android:text="01913729504"
        />
    </LinearLayout>
</LinearLayout>